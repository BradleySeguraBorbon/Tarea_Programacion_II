                  <Label fx:id="lblTeachersWelcome" text="Bienvenidos Profesores">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="imvTeachersWelcome" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/teachersWelcomeImage.png" />
                     </image>
                  </ImageView>
                  <HBox alignment="CENTER" prefWidth="1001.0" spacing="40.0">
                     <children>
                        <MFXButton fx:id="btnOpenAccountManagement" onAction="#openAccountTypeManagementView" prefHeight="135.0" prefWidth="250.0" text="Mantenimiento de Tipos de Cuenta" textAlignment="CENTER">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </MFXButton>
                        <MFXButton fx:id="btnOpenCooperativeManagement" onAction="#openCooperativeManagementView" prefHeight="135.0" prefWidth="250.0" text="Mantenimiento de Nombre y Logo" textAlignment="CENTER">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </MFXButton>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox fx:id="hboxOfficers" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" opacity="0.0" prefHeight="500.0" prefWidth="1000.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="332.0" spacing="150.0">
                     <children>
                        <MFXButton fx:id="openAffiliatedRegisterButton" onAction="#openRegistryManager" prefHeight="150.0" prefWidth="300.0" text="MANTENIMIENTO DE REGISTRO DE ASOCIADOS" />
                        <MFXButton fx:id="openCardPrintButton" onAction="#openCardPrint" prefHeight="150.0" prefWidth="300.0" text="IMPRESIÓN DE CARNET" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="500.0" prefWidth="335.0" spacing="10.0">
                     <children>
                        <Label fx:id="officersWelcomeLabel" text="Bienvenid@ Funcionari@">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Label text="Seleccione una acción">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ImageView fx:id="mainIconImageView" fitHeight="181.0" fitWidth="242.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/companyDefaultLogo.png" />
                           </image>
                        </ImageView>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="332.0" spacing="150.0">
                     <children>
                        <MFXButton fx:id="openAccountOpeningButton" onAction="#openAccountOpening" prefHeight="150.0" prefWidth="300.0" text="APERTURA DE CUENTAS" />
                        <MFXButton fx:id="openMoneyManagementButton" onAction="#openMoneyManagement" prefHeight="150.0" prefWidth="300.0" text="RETIRO Y DEPÓSITO DE DINERO" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox fx:id="vboxAffiliated" opacity="0.0" prefHeight="500.0" prefWidth="1000.0">
               <children>
                  <HBox prefHeight="325.0" prefWidth="1000.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="250.0">
                           <children>
                              <ImageView fx:id="imvWelcomeLeft" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/welcome.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="500.0" spacing="20.0">
                           <children>
                              <Label text="Bienvenid@ Afiliad@">
                                 <font>
                                    <Font size="36.0" />
                                 </font>
                              </Label>
                              <Label text="Seleccione una acción">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Pane prefHeight="34.0" prefWidth="500.0" />
                              <MFXButton fx:id="btnOpenRegisterView" onAction="#openRegisterView" prefHeight="125.0" prefWidth="250.0" text="REGISTRARME">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </MFXButton>
                           </children>
                           <padding>
                              <Insets top="20.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="250.0">
                           <children>
                              <ImageView fx:id="imvWelcomeRight" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/happy-face.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="175.0" prefWidth="1000.0" spacing="100.0">
                     <children>
                        <MFXButton fx:id="btnOpenAccountStatement" onAction="#openAccountStatement" prefHeight="125.0" prefWidth="250.0" text="ESTADO DE CUENTA">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </MFXButton>
                        <MFXButton fx:id="btnOpenDepositBox" onAction="#openDepositBox" prefHeight="125.0" prefWidth="250.0" text="BUZÓN DE DEPÓSITOS">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </MFXButton>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
