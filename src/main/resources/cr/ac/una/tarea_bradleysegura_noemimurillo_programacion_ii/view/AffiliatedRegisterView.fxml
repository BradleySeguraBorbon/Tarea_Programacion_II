                  <Image url="@../resources/takePicture.png" />
               </image>
            </ImageView>
            <HBox alignment="CENTER" prefHeight="78.0" prefWidth="1000.0" spacing="40.0">
               <children>
                  <MFXTextField fx:id="txtAffiliatedName" floatingText="Nombre" prefHeight="60.0" prefWidth="250.0" />
